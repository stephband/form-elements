
<!DOCTYPE html>
<html lang="en">
<head>
    ${ include('../../bolt/templates/head.literal', '../package.json') }

    <script title="debug">
        window.DEBUG = true;
        window.numberInputStylesheet = './shadow.css';
    </script>

    <link rel="stylesheet" href="../../bolt/module.css">
    ${ include('../../bolt/templates/style.html') }
    <style>
        @import './module.css';

        increment-control {
            align-self: start;
        }

        increment-control + increment-control {
            margin-top: 1.5rem;
        }
    </style>
</head>

<body class="docs-grid grid 3x-grid @1-6x-grid @2-9x-grid">
    ${ include('../../bolt/templates/element.literal', comments(
        "./module.js",
        "./modules/lifecycle.js",
        "./module.css",
        "./shadow.css"
    )) }

    <increment-control>
        <input type="number" />
    </increment-control>

    <increment-control>
        <input type="number" name="number" min="-1" max="1" value="0" />
    </increment-control>

    <increment-control>
        <span slot="decrement-button">☚</span>
        <span slot="increment-button">☛</span>
        <input type="number" name="number" min="0" max="100" step="2" value="20" />
    </increment-control>

    ${ include('../../bolt/templates/scripts.html') }

    <script type="module">
    import NumberInput from './module.js';
    import events      from '../../dom/modules/events.js';
    </script>
</body>
