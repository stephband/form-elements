
<!DOCTYPE html>
<html lang="en">
<head>
    ${ include('../../literal/documentation/templates/head.literal', '../package.json') }

    <script title="debug">
        window.incrementControlStylesheet = './shadow.css';
    </script>

    <style>
        @import './module.css';

        increment-control {
            align-self: start;
        }

        increment-control + increment-control {
            margin-top: 1.5rem;
        }
    </style>
</head>

<body class="4x-grid @1-6x-grid @2-7x-grid @3-9x-grid grid">
    ${ include('../../literal/documentation/templates/element.literal', comments(
        "./module.js",
        "./modules/lifecycle.js",
        "./module.css",
        "./shadow.css"
    )) }

    <increment-control>
        <input type="number" />
    </increment-control>

    <increment-control>
        <input type="number" name="number" min="-1" max="1" value="0" />
    </increment-control>

    <increment-control>
        <span slot="decrement-button">☚</span>
        <span slot="increment-button">☛</span>
        <input type="number" name="number" min="0" max="100" step="2" value="20" />
    </increment-control>

    ${ include('../../literal/documentation/templates/scripts.literal') }

    <script type="module">
    import IncrementControl from './module.js';
    import events      from '../../dom/modules/events.js';

    events('input', document).each(console.log);
    </script>
</body>
